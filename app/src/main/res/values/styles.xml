<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="posterPadding">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="searchButtons">
        <item name="android:fontFamily">@font/archivo_narrow_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorDarkYellow</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="editTextThemes" parent="@android:style/TextAppearance.Holo.Widget.EditText">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColor">@color/colorDarkYellow</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="menu" parent="Widget.AppCompat.PopupMenu">
        <!-- Change Overflow Menu ListView Item Height & Property -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>


    </style>
</resources>
